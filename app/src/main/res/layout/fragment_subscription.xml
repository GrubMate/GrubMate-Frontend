<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context="com.example.grubmate.grubmate.fragments.SubscriptionFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/tv_subscription_title"
        android:padding="16dp"
        android:text="Updated Subscription"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/b_subscription_subscribe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Subscribe"/>
    <ProgressBar
        android:id="@+id/pb_subscription_progress"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center_horizontal"
        android:visibility="visible"/>
    <TextView
        android:id="@+id/tv_subscription_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/subscription_empty_text"
        android:textAlignment="center"
        android:visibility="invisible"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_subscription_subscriptionFeed"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible"/>
</LinearLayout>
