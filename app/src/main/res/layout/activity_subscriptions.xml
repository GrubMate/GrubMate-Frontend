<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context="com.example.grubmate.grubmate.SubscriptionsActivity">
    <ProgressBar
        android:id="@+id/pb_subscription"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center_horizontal"
        android:visibility="visible"/>
    <TextView
        android:id="@+id/tv_subscription_empty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/subscription_empty_text"
        android:textAlignment="center"
        android:visibility="invisible"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_subscription"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible"/>
</LinearLayout>
