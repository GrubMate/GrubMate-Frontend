<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="8dp"
    app:contentPadding="16dp"
    app:cardCornerRadius="2dp"
    app:cardElevation="2dp">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_transaction_post_name"
            android:textSize="16sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Post Name"
            />
        <TextView
            android:id="@+id/tv_transaction_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="transaction type"
            android:layout_marginBottom="8dp"
            />
        <TextView
            android:id="@+id/tv_transaction_poster_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="poster name"/>
        <TextView
            android:id="@+id/tv_transaction_requester_name"
            android:text="requester name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/b_transaction_request_cancel"
            android:text="Cancel"
            android:layout_gravity="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:orientation="vertical">
            <RatingBar
                android:id="@+id/rb_transaction_rating"
                android:layout_marginTop="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:numStars="5"
                android:rating="5"
                android:stepSize="1" />
            <EditText
                android:id="@+id/tv_transaction_rating_review"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLength="30"
                android:maxLines="1"/>
            <Button
                android:id="@+id/b_transaction_rating_submit"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/notification_submit_button"/>
        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>